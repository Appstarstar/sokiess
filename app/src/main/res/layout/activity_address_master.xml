<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.AddressMaster">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_id_quick_order"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#267083"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        >

        <LinearLayout
            android:id="@+id/layout_quick_order"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:text="Company Name"
                android:textColor="@color/light_blue_500"
                android:textSize="16dp"
                />

            <EditText
                android:id="@+id/et_add_company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_locality"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:text="Subject"
                android:textColor="@color/light_blue_500"
                android:textSize="16dp"
                />


            <EditText
                android:id="@+id/et_add_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:text="Concern Person"
                android:textColor="@color/light_blue_500"
                android:textSize="16dp"
                />

            <EditText
                android:id="@+id/et_add_concer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:text="File name"
                android:textColor="@color/light_blue_500"
                android:textSize="16dp"
                />

            <EditText
                android:id="@+id/et_add_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView

                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:text="Email"
                android:textColor="@color/light_blue_500"
                android:textSize="16dp"
                />

            <EditText
                android:id="@+id/et_add_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:text="Mobile"
                android:textColor="@color/light_blue_500"
                android:textSize="16dp"
                />



            <EditText
                android:id="@+id/et_add_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>
            <TextView

                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:text="Alternate Mobile"
                android:textColor="@color/light_blue_500"
                android:textSize="16dp"
                />



            <EditText
                android:id="@+id/et_add_altenate_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:text="Fax no."
                android:textSize="16dp"
                android:textColor="@color/light_blue_500"

                />
            <EditText
                android:id="@+id/et_add_whats_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:text="Contact Person Name"
                android:textSize="16dp"
                android:textColor="@color/light_blue_500"
                />

            <EditText
                android:id="@+id/et_add_contact_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:text="Department"
                android:textSize="16dp"
                android:textColor="@color/light_blue_500"
                />

            <EditText
                android:id="@+id/et_add_department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:text="Phone No."
                android:textSize="16dp"
                android:textColor="@color/light_blue_500"
                />

            <EditText
                android:id="@+id/et_add_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

            <TextView
                android:id="@+id/tv_developer"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:text="Address"
                android:textColor="@color/light_blue_500"
                android:textSize="16dp"
                />

            <EditText
                android:id="@+id/et_add_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:text="City"
                android:textSize="16dp"
                android:textColor="@color/light_blue_500"
                />

            <EditText
                android:id="@+id/et_add_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:text="State"
                android:textSize="16dp"
                android:textColor="@color/light_blue_500"
                />

            <EditText
                android:id="@+id/et_add_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:text="Pincode"
                android:textSize="16dp"
                android:textColor="@color/light_blue_500"
                />

            <EditText
                android:id="@+id/et_add_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:text=" Date"
                android:textColor="@color/light_blue_500"
                android:layout_gravity="center_horizontal"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:text=" Date"
                android:gravity="right"
                android:textColor="@color/light_blue_500"
                android:layout_marginTop="-40dp"
                android:id="@+id/tv_order_date1"
                android:layout_gravity="center_horizontal"
                android:textSize="16dp"/>
        <LinearLayout
            android:id="@+id/layout_quick_order1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_create_add_masters"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:background="@drawable/oval"
                android:text="Create" />
            <Button
                android:id="@+id/btn_update_add_master"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:background="@drawable/oval"
                android:text="Update" />
        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</ScrollView>
