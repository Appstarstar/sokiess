<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="nimbl3.com.sokies.Activity.CompleteRateMaster$PlaceholderFragment">

    <SearchView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:queryHint="Search">
    </SearchView>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left|top"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_id_qick_order"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="#267083">

                <LinearLayout
                    android:id="@+id/layout_qck_order"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_company_name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Company Name"
                        android:textColor="@color/light_blue_500"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="-30dp"
                        android:text="Item Name"
                        android:textColor="@color/light_blue_500"
                        android:textSize="18dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
</RelativeLayout>
