<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.EfficiencyStatus">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_id_forgot"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:background="@color/white"
        android:layout_marginBottom="2dp"

        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        android:layout_marginStart="3dp">

        <LinearLayout
            android:id="@+id/layout_sign_up"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="6dp"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="@drawable/settings"
                android:layout_gravity="right"
                android:layout_marginRight="10dp" />


            <TextView
                android:layout_width="237dp"
                android:layout_height="30dp"
                android:text="Commit Date"
                android:id="@+id/tv_Product_name"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/light_blue_500"
                />
            <TextView
                android:layout_width="116dp"
                android:layout_height="30dp"
                android:text="Delay Date"
                android:id="@+id/tv_time"
                android:textSize="16dp"
                android:layout_marginTop="-30dp"

                android:textColor="@color/light_blue_500"
                android:layout_gravity="right"
                android:layout_marginRight="2dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="20/10/2017"

                android:textColor="@color/light_blue_500"
                android:layout_marginTop="-5dp"
                android:textSize="16dp"
                />
            <TextView
                android:layout_width="176dp"
                android:layout_height="30dp"
                android:text="Project Manager Name"
                android:id="@+id/tv_Product_me"
                android:textSize="16dp"
                android:layout_marginTop="10dp"

                android:layout_gravity="left"
                android:textColor="@color/light_blue_500"
                android:layout_marginRight="35dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Efficiency %"
                android:id="@+id/tv_Prduct_name"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/light_blue_500"
                android:layout_gravity=""
                android:layout_marginRight="35dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="20/10/2017"
                android:id="@+id/txtv_old"
                android:layout_marginTop="-95dp"
                android:layout_gravity="right"
                android:layout_marginRight="40dp"
                android:textSize="16dp"
                android:textColor="@color/light_blue_500"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Shivam Ji"
                android:id="@+id/txtv_l"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:textColor="@color/light_blue_500"
                android:layout_marginRight="40dp"
                android:layout_gravity="right" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="%"
                android:id="@+id/percent"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                android:textColor="@color/light_blue_500"
                android:layout_marginRight="40dp"
                android:layout_gravity="right" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
